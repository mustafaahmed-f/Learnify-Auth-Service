{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./env.d.ts", "./node_modules/@types"],
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
